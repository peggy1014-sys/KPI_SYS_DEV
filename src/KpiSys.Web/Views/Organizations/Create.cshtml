@model KpiSys.Web.Models.OrganizationFormViewModel
@using System.Linq
@{
    ViewData["Title"] = "新增組織";
    var parents = ViewBag.ParentOrganizations as IEnumerable<KpiSys.Web.Data.Entities.OrganizationEntity> ?? Enumerable.Empty<KpiSys.Web.Data.Entities.OrganizationEntity>();
}

<h1 class="h3 mb-4">新增組織</h1>

<form asp-action="Create" method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="OrgId" class="form-label"></label>
                <input asp-for="OrgId" class="form-control" />
                <span asp-validation-for="OrgId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="OrgName" class="form-label"></label>
                <input asp-for="OrgName" class="form-control" />
                <span asp-validation-for="OrgName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ParentOrgId" class="form-label"></label>
                <select asp-for="ParentOrgId" class="form-select" id="parentSelect">
                    <option value="">(無)</option>
                    @foreach (var p in parents)
                    {
                        <option value="@p.OrgId" data-level="@p.OrgLevel">@p.OrgId - @p.OrgName</option>
                    }
                </select>
                <span asp-validation-for="ParentOrgId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="OrgLevel" class="form-label"></label>
                <input asp-for="OrgLevel" class="form-control" id="orgLevelInput" placeholder="若留空將依上層自動推算" />
                <span asp-validation-for="OrgLevel" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="PortfolioCode" class="form-label"></label>
                <input asp-for="PortfolioCode" class="form-control" />
                <span asp-validation-for="PortfolioCode" class="text-danger"></span>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <div class="form-check mt-4">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer bg-white text-end">
        <a asp-action="Index" class="btn btn-outline-secondary me-2">返回清單</a>
        <button type="submit" class="btn btn-primary">儲存</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const parentSelect = document.getElementById('parentSelect');
        const orgLevelInput = document.getElementById('orgLevelInput');
        parentSelect?.addEventListener('change', () => {
            const selected = parentSelect.selectedOptions[0];
            const level = selected?.getAttribute('data-level');
            if (level) {
                orgLevelInput.value = parseInt(level, 10) + 1;
            }
        });
    </script>
}
