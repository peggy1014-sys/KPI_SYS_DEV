<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 專案工時KPI績效管理系統</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="app-shell d-flex">
        <aside class="sidebar d-flex flex-column">
            <div class="sidebar-header px-4 py-4 border-bottom">
                <div class="fw-semibold text-white">專案工時KPI績效管理系統</div>
            </div>
            <nav class="nav flex-column sidebar-nav px-2 py-3">
                <a class="nav-link d-flex align-items-center" href="/">
                    <i class="bi bi-speedometer2 me-2"></i> 儀表板
                </a>
                <a class="nav-link d-flex align-items-center" href="/employees">
                    <i class="bi bi-people me-2"></i> 員工管理
                </a>
                <a class="nav-link d-flex align-items-center" href="/codes">
                    <i class="bi bi-collection me-2"></i> 代碼管理
                </a>
                <a class="nav-link d-flex align-items-center" href="/projects">
                    <i class="bi bi-kanban me-2"></i> 專案管理
                </a>
                <a class="nav-link d-flex align-items-center" href="/timesheets">
                    <i class="bi bi-clock-history me-2"></i> 工時填報
                </a>
            </nav>
        </aside>

        <div class="main flex-grow-1 d-flex flex-column">
            <header class="topbar d-flex align-items-center justify-content-between">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/">首頁</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                @ViewData["Title"] ?? string.Join(" / ", ViewContext.RouteData.Values.Select(v => v.Value))
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="text-muted small">@DateTime.Now.ToString("yyyy/MM/dd")</div>
            </header>

            <main class="content flex-grow-1">
                @RenderBody()
            </main>

            <footer class="top-border small text-muted text-center py-3">
                &copy; @DateTime.Now.Year 專案工時KPI績效管理系統
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
