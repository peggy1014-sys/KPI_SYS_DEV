@model KpiSys.Web.Models.TimesheetFormViewModel
@using System.Text.Json
@{
    var title = Model.IsEdit ? "編輯工時" : "新增工時";
    ViewData["Title"] = title;
}

<div class="d-flex align-items-center mb-3">
    <div>
        <h1 class="h3 mb-0">@title</h1>
        <p class="text-muted mb-0">填報當日工時，提交前可隨時修改</p>
    </div>
    <div class="ms-auto">
        <a class="btn btn-outline-secondary" asp-action="Index">回列表</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="@(Model.IsEdit ? "Edit" : "Create")" asp-route-id="@Model.Id">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="WorkDate" class="form-label"></label>
                    <input asp-for="WorkDate" class="form-control" type="date" />
                    <span asp-validation-for="WorkDate" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ProjectCode" class="form-label"></label>
                    <select asp-for="ProjectCode" class="form-select" id="projectSelect">
                        <option value="">(請選擇)</option>
                        @foreach (var project in Model.ProjectOptions)
                        {
                            <option value="@project.Code">@project.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ProjectCode" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="TaskId" class="form-label"></label>
                    <select asp-for="TaskId" class="form-select" id="taskSelect">
                        <option value="">(不限任務)</option>
                        @foreach (var task in Model.TaskOptions)
                        {
                            <option value="@task.Id">@task.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TaskId" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Hours" class="form-label"></label>
                    <input asp-for="Hours" class="form-control" type="number" step="0.5" min="0" max="24" />
                    <span asp-validation-for="Hours" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="OvertimeHours" class="form-label"></label>
                    <input asp-for="OvertimeHours" class="form-control" type="number" step="0.5" min="0" max="24" />
                    <span asp-validation-for="OvertimeHours" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">狀態</label>
                    @if (Model.Status.Equals("Submitted", StringComparison.OrdinalIgnoreCase))
                    {
                        <div class="form-control-plaintext"><span class="badge bg-success">已提交</span></div>
                    }
                    else
                    {
                        <div class="form-control-plaintext"><span class="badge bg-secondary">草稿</span></div>
                    }
                    <input type="hidden" asp-for="Status" />
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <div class="text-muted small">依規則：工作日期不可為未來日，當日總工時需 ≤ 24 且不可重複專案任務。</div>
                <div>
                    <button type="submit" class="btn btn-primary">儲存</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const tasksByProject = @Html.Raw(JsonSerializer.Serialize(Model.ProjectTasks));
        const projectSelect = document.getElementById('projectSelect');
        const taskSelect = document.getElementById('taskSelect');

        function refreshTasks() {
            const projectCode = projectSelect.value;
            const tasks = tasksByProject[projectCode] || [];
            const selectedValue = taskSelect.value;
            taskSelect.innerHTML = '<option value="">(不限任務)</option>';
            tasks.forEach(t => {
                const option = document.createElement('option');
                option.value = t.Id ?? t.id;
                option.textContent = t.Name ?? t.name;
                if (option.value === selectedValue) {
                    option.selected = true;
                }
                taskSelect.appendChild(option);
            });
        }

        projectSelect.addEventListener('change', refreshTasks);
        refreshTasks();
    </script>
}
