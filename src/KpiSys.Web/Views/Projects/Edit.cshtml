@model KpiSys.Web.Models.ProjectFormViewModel
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.OriginalCode) ? "新增專案" : "編輯專案";
}

<div class="d-flex align-items-center mb-3">
    <div>
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">請填寫專案基本資料，確保工時與任務可正確連結</p>
    </div>
    <div class="ms-auto">
        <a class="btn btn-outline-secondary" asp-action="Index">返回列表</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            @if (!string.IsNullOrEmpty(Model.OriginalCode))
            {
                <input type="hidden" asp-for="OriginalCode" />
            }

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Code" class="form-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="col-md-8">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ProjectType" class="form-label"></label>
                    <select asp-for="ProjectType" class="form-select">
                        <option value="">(請選擇)</option>
                        @foreach (var type in Model.ProjectTypes)
                        {
                            <option value="@type.Code">@type.CodeName</option>
                        }
                    </select>
                    <span asp-validation-for="ProjectType" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ProjectSize" class="form-label"></label>
                    <select asp-for="ProjectSize" class="form-select">
                        <option value="">(請選擇)</option>
                        @foreach (var size in Model.ProjectSizes)
                        {
                            <option value="@size.Code">@size.CodeName</option>
                        }
                    </select>
                    <span asp-validation-for="ProjectSize" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ProjectCriticality" class="form-label"></label>
                    <select asp-for="ProjectCriticality" class="form-select">
                        <option value="">(請選擇)</option>
                        @foreach (var criticality in Model.ProjectCriticalities)
                        {
                            <option value="@criticality.Code">@criticality.CodeName</option>
                        }
                    </select>
                    <span asp-validation-for="ProjectCriticality" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Portfolio" class="form-label"></label>
                    <select asp-for="Portfolio" class="form-select">
                        <option value="">(請選擇)</option>
                        @foreach (var portfolio in Model.Portfolios)
                        {
                            <option value="@portfolio.Code">@portfolio.CodeName</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="PmId" class="form-label"></label>
                    <select asp-for="PmId" class="form-select">
                        <option value="">(請選擇)</option>
                        @foreach (var emp in Model.Employees)
                        {
                            <option value="@emp.Id">@emp.Name (@emp.EmployeeNo)</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select">
                        <option value="">(請選擇)</option>
                        @foreach (var status in Model.Statuses)
                        {
                            <option value="@status.Code">@status.CodeName</option>
                        }
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">儲存</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
